@model musicx.Models.song
@{
    ViewBag.Title = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
    }

<h2>Update</h2>



<div style="background-image:url(/Content/4.jpg)">

    <div class="col-md-12" style="padding-top:100px">
        <div class="panel panel-primary col-md-offset-2 col-md-8">
            <!--panel contents -->
            <div class="panel-heading">Update your music!</div>
            <br />
            <form class="form-horizontal" method="post" action="/Admin/UpdateSubmit/@Model.Id" enctype="multipart/form-data">

                <div class="form-group">
                    <label for="Title" class="control-label col-xs-3 text-info">Title</label>
                    <div class="col-xs-5">
                        <input type="text" class="form-control" id="title" name="title" value="@Model.Name">
                    </div>
                </div>

                <div class="form-group">
                    <label for="Category" class="control-label col-xs-3 text-info">Category</label>
                    <div class="col-xs-5">
                        <select class="form-control" name="category">
                            <option value="@Model.category" selected disabled>Please select a category</option>
                            <option value="Pop">Pop</option>
                            <option value="Jazz">Jazz</option>
                            <option value="Metal">Metal</option>
                            <option value="Rock">Rock</option>
                            <option value="Indies">Indies</option>
                        </select>
                    </div>

                </div>

                <div class="form-group">
                    <label for="Artist" class="control-label col-xs-3 text-info">Artist</label>
                    <div class="col-xs-5">
                        <input type="text" class="form-control" id="artist" placeholder="Artist Name" name="artist" value="@Model.artist">
                    </div>
                </div>

                <div class="form-group">
                    <label for="UploadFile" class="control-label col-xs-3 text-info">Upload File</label>
                    <div class="col-xs-5">
                        <input type="file" class="file-loading" data-upload-url="/site/file-upload" data-upload-async="true" data-max-file-count="10" name="file">
                    </div>
                </div>

                <div class="form-group col-xs-7">
                    <div>
                        <input type="submit" value="update" />
                    </div>
                </div>
            </form>
        </div>
    </div>
    <div id="wrapper">
        <div class="container"></div>
    </div>
</div>



