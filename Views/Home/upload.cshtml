@{
    ViewBag.Title = "upload";
    Layout = "~/Views/Shared/_userLayout.cshtml";
}




<div class="col-md-12" style="padding-top:100px">
    <div class="panel panel-primary col-md-offset-2 col-md-8">
        <!--panel contents -->
        <div class="panel-heading">Upload your music!</div>
        <br />
        <form class="form-horizontal" method="post" action="/Home/uploadSong/" enctype="multipart/form-data">

            <div class="form-group">
                <label for="Title" class="control-label col-xs-3 text-info">Title</label>
                <div class="col-xs-5">
                    <input type="text" class="form-control" id="Title" name="title">
                </div>
            </div>

            <div class="form-group">
                <label for="Category" class="control-label col-xs-3 text-info">Category</label>
                <div class="col-xs-5">
                    <select class="form-control" name="category">
                        <option value="None" selected disabled>Please select a category</option>
                        <option value="Pop">Pop</option>
                        <option value="Jazz">Jazz</option>
                        <option value="Metal">Metal</option>
                        <option value="Rock">Rock</option>
                        <option value="Indies">Indies</option>
                    </select>
                </div>

            </div>

            <div class="form-group">
                <label for="Artist" class="control-label col-xs-3 text-info">Artist</label>
                <div class="col-xs-5">
                    <input type="text" class="form-control" id="Artist" placeholder="Artist Name" name="artist">
                </div>
            </div>

            <div class="form-group">
                <label for="UploadFile" class="control-label col-xs-3 text-info">Upload File</label>
                <div class="col-xs-5">
                    <input type="file" class="file-loading" data-upload-url="/site/file-upload" data-upload-async="true" data-max-file-count="10" name="file">
                </div>
            </div>

            <div class="form-group">
                <div>
                    <input alt="/Home/Home" type="submit" value="cancel" />
                    <input type="submit" value="upload" />
                </div>
            </div>
        </form>
    </div>
</div>


<div id="wrapper">
    <div class="container"></div>
</div>



